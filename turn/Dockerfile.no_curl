FROM coturn/coturn:latest

# Копирование файлов
COPY turnserver.conf /etc/turnserver/
COPY start_turn_no_curl.sh /usr/local/bin/
COPY health_check.py /usr/local/bin/

# Делаем скрипт исполняемым
RUN chmod +x /usr/local/bin/start_turn_no_curl.sh

# Открытие портов
EXPOSE 3478 3478/udp 5349 5349/udp

# Запуск через скрипт без curl
CMD ["/usr/local/bin/start_turn_no_curl.sh"]
